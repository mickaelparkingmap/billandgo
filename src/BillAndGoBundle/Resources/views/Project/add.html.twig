{% extends "BillAndGoBundle::base.html.twig" %}

{% block title %}{{ parent() }} - Nouveau Projet{% endblock %}

{% block fos_user_content %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Projets
                <small>Créer votre nouveau projet</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
                <li><a href="{{ path('billandgo_project_list') }}"><i class="fa fa-align-left"></i> Projets</a></li>
                <li class="active"><i class="fa fa-plus"></i> Ajout</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class=" col-md-offset-3 col-md-6">

                    <!-- Widget: user widget style 1 -->
                    <div class="box box-widget widget-user-2">
                        <!-- Add the bg color to the header using any of the bg-* classes -->
                        <div class="widget-user-header bg-green" style="background: url('{{ asset('bundles/billandgo/img/bill.jpg') }}') center center;">
                            <div class="widget-user-image" style="margin-top: -35px;">
                                <i class="fa fa-briefcase fa-3x ppdashbboard"></i>
                            </div>
                            <!-- /.widget-user-image -->
                            <h5 class="widget-user-username">Nouveau</h5>
                            <h5 class="widget-user-desc">Projet</h5>
                            <h5 class="widget-user-desc"><em>Suivez les étapes afin de créer un nouveau projet</em></h5>
                        </div>
                        <div class="box-footer">
                            <div class="row">
                                <div class="col-md-12">
                                    {{ include("BillAndGoBundle:Project:form.html.twig") }}
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- /.widget-user -->
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>

    <!-- /.content-wrapper -->

{% endblock fos_user_content %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/locales/bootstrap-datepicker.fr.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#billandgobundle_project_deadline').datepicker({
                language: 'fr',
                autoclose: true,
                todayHighlight: true
            });
        });

    </script>
    <script>

        var syncTask = "{{ syncTask }}";
        </script>
    <script src="{{ asset('bundles/billandgo/js/project.google.agenda.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/locales/bootstrap-datepicker.fr.min.js"></script>

    <script src="{{ asset('bundles/billandgo/js/project.js') }}"></script>
    <script async defer src="https://apis.google.com/js/api.js" onload="this.onload=function(){};handleClientLoad()" onreadystatechange="if (this.readyState === 'complete') this.onload()"></script>
{% endblock %}