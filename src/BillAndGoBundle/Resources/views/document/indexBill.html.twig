    {{ parent() }}
    <script>
        $('#document-filter-begin').datepicker();
        $('#document-filter-end').datepicker();

        $(".listing-form-send").submit(function (e) {
            e.preventDefault();
            $(".send-btn-contact").attr("disabled", "disabled");
            var that = $(this);
            $.ajax({
                url : $(this).attr("action"),
                type : 'POST',
                data: $(this).serialize(),
                success : function(data, statut){ // success est toujours en place, bien sûr !
                    that.parent().find(".alert-contact-send").html("<div class='alert alert-success'>Le document a bien été envoyé à ce contact</span>").show();
                },

                error : function(resultat, statut, erreur){
                    that.parent().find(".alert-contact-send").html("<div class='alert alert-success'>Une erreur s'est produite : l'envoi n'a pas pu être effectué</span>").show();
                }
            });

            setTimeout(function () {
                that.parent().find(".alert-contact-send").hide();
                $(".send-btn-contact").removeAttr("disabled");
                location.reload();
            }, 6000);
        });
    </script>

