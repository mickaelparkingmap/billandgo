{% extends "BillAndGoBundle::base.html.twig" %}

{% block title %}{{ parent() }} - Nouvelle Ligne{% endblock %}

{% block fos_user_content %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                LIGNES
                <small>Nouvelle Ligne</small>
            </h1>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Cr√©ez une ligne :</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-offset-2 col-lg-offset-3 col-md-8 col-lg-6 text-center">
                            <div class="well">
                                {{ form(form) }}
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock fos_user_content %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/locales/bootstrap-datepicker.fr.min.js"></script>
    <script>
        $('#billandgobundle_line_deadline').datepicker(
            {
                language: 'fr',
                autoclose: true,
                todayHighlight: true
            }
        );
    </script>
{% endblock %}